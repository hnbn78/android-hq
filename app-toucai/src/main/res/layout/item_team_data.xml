<?xml version="1.0" encoding="utf-8"?>
<com.noober.background.view.BLLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/recycler_devider_margin_5dp"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingTop="@dimen/dp_10"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    android:paddingBottom="6dp"
    app:bl_corners_radius="3dp"
    app:bl_solid_color="@color/white_f7f7f7">

    <TextView
        android:id="@+id/tvTeamCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="@dimen/text_large" />

    <TextView
        android:id="@+id/tvTeamKey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:paddingBottom="@dimen/dp_4"
        android:text="团队人数"
        android:textColor="@color/gray" />
</com.noober.background.view.BLLinearLayout>