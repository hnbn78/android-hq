<?xml version="1.0" encoding="utf-8"?>
<com.noober.background.view.BLRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_10"
    app:bl_corners_radius="5dp"
    app:bl_solid_color="@color/red_ffdfd7">


    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableLeft="@mipmap/agent_username"
            android:drawablePadding="6dp"
            android:text="用户名 :" />

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/tv1"
            android:ellipsize="end"
            android:maxWidth="180dp"
            android:singleLine="true"
            android:text="zhangsan"
            android:textColor="@color/red" />

        <com.noober.background.view.BLTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@+id/username"
            android:ellipsize="end"
            android:maxWidth="180dp"
            android:paddingLeft="6dp"
            android:paddingTop="2dp"
            android:paddingRight="6dp"
            android:paddingBottom="2dp"
            android:singleLine="true"
            android:text="代理"
            android:textColor="@color/white"
            android:textSize="11dp"
            android:visibility="gone"
            app:bl_corners_radius="15dp"
            app:bl_solid_color="@color/blue_2396f7" />
    </RelativeLayout>

    <com.noober.background.view.BLRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingRight="5dp"
        app:bl_corners_bottomLeftRadius="5dp"
        app:bl_corners_bottomRightRadius="5dp"
        app:bl_solid_color="@color/white">

        <TextView
            android:id="@+id/tv2"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:background="@color/white_f7f7f7"
            android:padding="3dp"
            android:text="订单号 :"
            android:textColor="@color/gray"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/tvBillNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_toRightOf="@+id/tv2"
            android:ellipsize="end"
            android:padding="3dp"
            android:paddingLeft="@dimen/dp_10"
            android:singleLine="true"
            android:text="hx5569994646664646484"
            android:textColor="@color/gray"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/tv3"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv2"
            android:layout_marginTop="7dp"
            android:background="@color/white_f7f7f7"
            android:padding="3dp"
            android:text="时间 :"
            android:textColor="@color/gray"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv2"
            android:layout_marginTop="7dp"
            android:layout_toRightOf="@+id/tv3"
            android:ellipsize="end"
            android:padding="3dp"
            android:paddingLeft="@dimen/dp_10"
            android:singleLine="true"
            android:text="2019--9-15 12:12:56"
            android:textColor="@color/gray"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/tv4"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv3"
            android:layout_marginTop="7dp"
            android:background="@color/white_f7f7f7"
            android:padding="3dp"
            android:text="操作类型 :"
            android:textColor="@color/gray"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/operateType"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv3"
            android:layout_marginTop="7dp"
            android:layout_toRightOf="@+id/tv4"
            android:ellipsize="end"
            android:padding="3dp"
            android:singleLine="true"
            android:text="彩票类型"
            android:textColor="@color/gray"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/tv5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv3"
            android:layout_marginTop="7dp"
            android:layout_toRightOf="@+id/operateType"
            android:background="@color/white_f7f7f7"
            android:ellipsize="end"
            android:padding="3dp"
            android:singleLine="true"
            android:text="业务类型 :"
            android:textColor="@color/gray"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/workType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv3"
            android:layout_marginTop="7dp"
            android:layout_toRightOf="@+id/tv5"
            android:ellipsize="end"
            android:padding="3dp"
            android:singleLine="true"
            android:text="单单日结"
            android:textColor="@color/gray"
            android:textSize="13dp" />


        <TextView
            android:id="@+id/tv6"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv4"
            android:layout_marginTop="7dp"
            android:background="@color/white_f7f7f7"
            android:padding="3dp"
            android:text="变动金额 :"
            android:textColor="@color/gray"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/biandongMoney"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv4"
            android:layout_marginTop="7dp"
            android:layout_toRightOf="@+id/tv6"
            android:ellipsize="end"
            android:padding="3dp"
            android:singleLine="true"
            android:text="-155.2555"
            android:textColor="@color/gray"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/tv7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv4"
            android:layout_marginTop="7dp"
            android:layout_toRightOf="@+id/biandongMoney"
            android:background="@color/white_f7f7f7"
            android:ellipsize="end"
            android:padding="3dp"
            android:singleLine="true"
            android:text="备注 :"
            android:textColor="@color/gray"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/beizhu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv4"
            android:layout_marginTop="7dp"
            android:layout_toRightOf="@+id/tv7"
            android:ellipsize="end"
            android:padding="3dp"
            android:singleLine="true"
            android:text="单单日结"
            android:textColor="@color/gray"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/tv8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv6"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="@color/white_f7f7f7"
            android:ellipsize="end"
            android:padding="3dp"
            android:singleLine="true"
            android:text="余额 :"
            android:textColor="@color/gray"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/tvbalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv6"
            android:layout_marginTop="7dp"
            android:layout_toRightOf="@+id/tv8"
            android:ellipsize="end"
            android:padding="3dp"
            android:singleLine="true"
            android:text="46546546.2225"
            android:textColor="@color/gray"
            android:textSize="13dp" />


    </com.noober.background.view.BLRelativeLayout>
</com.noober.background.view.BLRelativeLayout>