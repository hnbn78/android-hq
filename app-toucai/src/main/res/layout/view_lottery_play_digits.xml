<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/vgDigitGroup"
    android:background="#ffffff"
    android:paddingBottom="10dp"
    android:paddingLeft="13.5dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp">

    <TextView
        android:id="@+id/tvDigitPowerLab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="1"
        android:text="号码"
        android:textColor="#7a7a7a"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/glDigits"
        app:layout_constraintTop_toTopOf="@+id/glDigits" />

    <LinearLayout
        android:id="@+id/vgHotKey"
        style="@style/vgHotKey"
        app:layout_constraintLeft_toRightOf="@+id/tvDigitPowerLab">

        <TextView
            android:id="@+id/vKeyQuan"
            style="@style/text_hotkey"
            android:layout_weight="1"
            android:text="全" />

        <FrameLayout
            android:layout_width="3dp"
            android:layout_height="wrap_content">

            <View
                android:layout_width="13.5dp"
                android:layout_height="13.5dp"
                android:layout_gravity="center"
                android:background="@drawable/sh_vertical_dash_line_5dp"
                android:layerType="software" />
        </FrameLayout>

        <TextView
            android:id="@+id/vKeyDa"
            style="@style/text_hotkey"
            android:text="大" />

        <FrameLayout
            android:layout_width="3dp"
            android:layout_height="wrap_content">

            <View
                android:layout_width="13.5dp"
                android:layout_height="13.5dp"
                android:layout_gravity="center"
                android:background="@drawable/sh_vertical_dash_line_5dp"
                android:layerType="software" />
        </FrameLayout>

        <TextView
            android:id="@+id/vKeyXiao"
            style="@style/text_hotkey"
            android:text="小" />

        <FrameLayout
            android:layout_width="3dp"
            android:layout_height="wrap_content">

            <View
                android:layout_width="13.5dp"
                android:layout_height="13.5dp"
                android:layout_gravity="center"
                android:background="@drawable/sh_vertical_dash_line_5dp"
                android:layerType="software" />
        </FrameLayout>

        <TextView
            android:id="@+id/vKeyJi"
            style="@style/text_hotkey"
            android:text="奇" />

        <FrameLayout
            android:layout_width="3dp"
            android:layout_height="wrap_content">

            <View
                android:layout_width="13.5dp"
                android:layout_height="13.5dp"
                android:layout_gravity="center"
                android:background="@drawable/sh_vertical_dash_line_5dp"
                android:layerType="software" />
        </FrameLayout>

        <TextView
            android:id="@+id/vKeyOu"
            style="@style/text_hotkey"
            android:text="偶" />

        <FrameLayout
            android:layout_width="3dp"
            android:layout_height="wrap_content">

            <View
                android:layout_width="13.5dp"
                android:layout_height="13.5dp"
                android:layout_gravity="center"
                android:background="@drawable/sh_vertical_dash_line_5dp"
                android:layerType="software" />
        </FrameLayout>

        <TextView
            android:id="@+id/vKeyQing"
            style="@style/text_hotkey"
            android:text="清" />
    </LinearLayout>

    <android.support.v7.widget.GridLayout
        android:id="@+id/glDigits"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vgHotKey"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="9dp"
        app:alignmentMode="alignBounds"
        app:columnCount="5"
        app:layout_constraintLeft_toRightOf="@+id/tvDigitPowerLab"
        app:layout_constraintTop_toBottomOf="@+id/vgHotKey"
        app:layout_constraintRight_toRightOf="parent"
        app:rowCount="2"
        app:useDefaultMargins="true">

    </android.support.v7.widget.GridLayout>


</android.support.constraint.ConstraintLayout>