<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:clipChildren="false">


    <com.youth.banner.Banner
        android:id="@+id/vBanner"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="5dp"
        android:clipChildren="false"
        app:delay_time="3000"
        app:indicator_height="6dp"
        app:indicator_width="6dp"
        app:scroll_time="500" />

    <ViewFlipper
        android:id="@+id/filpper"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:autoStart="false"
        android:flipInterval="3500"
        android:inAnimation="@anim/anim_come_in"
        android:outAnimation="@anim/anim_get_out"
        />

    <com.desheng.app.toucai.view.JDAdverView
        android:id="@+id/dajiangPush"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        app:animDuration="2000"
        android:visibility="gone"/>

</RelativeLayout>