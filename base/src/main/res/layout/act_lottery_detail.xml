<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TableRow
            android:paddingBottom="8dp"
            android:paddingTop="8dp">

            <TextView
                android:layout_width="100dp"
                android:text="订单号"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tv_billno"

                android:textSize="17sp" />
        </TableRow>

        <TableRow
            android:paddingBottom="8dp"
            android:paddingTop="8dp">

            <TextView
                android:layout_width="100dp"
                android:text="彩种"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tv_kind"
                android:textSize="17sp" />
        </TableRow>

        <TableRow
            android:paddingBottom="8dp"
            android:paddingTop="8dp">

            <TextView
                android:layout_width="100dp"
                android:text="玩法"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tv_method"
                android:textSize="17sp" />
        </TableRow>

        <TableRow
            android:paddingBottom="8dp"
            android:paddingTop="8dp">

            <TextView
                android:layout_width="100dp"
                android:text="期号"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tv_issue"
                android:textSize="17sp" />
        </TableRow>

        <TableRow
            android:paddingBottom="8dp"
            android:paddingTop="8dp">

            <TextView
                android:layout_width="100dp"
                android:text="资金模式"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tv_model"
                android:textSize="17sp" />
        </TableRow>

        <TableRow
            android:paddingBottom="8dp"
            android:paddingTop="8dp">

            <TextView
                android:layout_width="100dp"
                android:text="奖金模式"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tv_code"
                android:textSize="17sp" />
        </TableRow>

        <TableRow
            android:paddingBottom="8dp"
            android:paddingTop="8dp">

            <TextView
                android:layout_width="100dp"
                android:text="加入时间"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tv_order_time"
                android:textSize="17sp" />
        </TableRow>

        <TableRow
            android:paddingBottom="8dp"
            android:paddingTop="8dp">

            <TextView
                android:layout_width="100dp"
                android:text="投注金额"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tv_money"
                android:textSize="17sp" />
        </TableRow>

        <TableRow
            android:paddingBottom="8dp"
            android:paddingTop="8dp">

            <TextView
                android:layout_width="100dp"
                android:text="倍数"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tv_multi"
                android:textSize="17sp" />
        </TableRow>

        <TableRow
            android:paddingBottom="8dp"
            android:paddingTop="8dp">

            <TextView
                android:layout_width="100dp"
                android:text="注数"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tv_hit"
                android:textSize="17sp" />
        </TableRow>

        <TableRow
            android:paddingBottom="8dp"
            android:paddingTop="8dp">

            <TextView
                android:layout_width="100dp"
                android:text="奖金"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tv_win"
                android:textSize="17sp" />
        </TableRow>

        <TableRow
            android:paddingBottom="8dp"
            android:paddingTop="8dp">

            <TextView
                android:layout_width="100dp"
                android:text="盈亏"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tv_profit"
                android:textSize="17sp" />
        </TableRow>

        <TableRow
            android:paddingBottom="8dp"
            android:paddingTop="8dp">

            <TextView
                android:layout_width="100dp"
                android:text="状态"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tv_state"
                android:textSize="17sp" />
        </TableRow>

        <TableRow
            android:paddingBottom="8dp"
            android:paddingTop="8dp">

            <TextView
                android:layout_width="100dp"
                android:text="返点"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tv_point"
                android:textSize="17sp" />
        </TableRow>

        <TableRow
            android:paddingBottom="8dp"
            android:paddingTop="8dp">

            <TextView
                android:layout_width="100dp"
                android:text="开奖号码"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tv_open"
                android:textSize="17sp" />
        </TableRow>

        <RelativeLayout
            android:paddingBottom="8dp"
            android:paddingTop="8dp">

            <TextView
                android:id="@+id/tv_betNum"
                android:width="100dp"
                android:layout_alignParentLeft="true"

                android:layout_alignParentTop="true"
                android:layout_height="wrap_content"
                android:layout_width="100dp"
                android:text="投注号码"
                android:textSize="17sp" />

            <TextView
                android:layout_toRightOf="@+id/tv_betNum"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:id="@+id/tv_content"
                android:textSize="17sp" />
        </RelativeLayout>
    </TableLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_cancelOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="8dp"
        android:background="@drawable/sh_bd_rec_gray_blue_round"
        android:text="撤单"
        android:textColor="#FFFFFF" />
</LinearLayout>


