<?xml version="1.0" encoding="utf-8"?>
<com.noober.background.view.BLRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    app:bl_corners_radius="4dp"
    app:bl_solid_color="@color/white">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@color/white_f7f7f7"
        android:padding="3dp"
        android:text="用  户  名："
        android:textColor="@color/gray" />

    <com.noober.background.view.BLTextView
        android:id="@+id/username"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@+id/tv1"
        android:paddingLeft="6dp"
        android:paddingTop="3dp"
        android:paddingRight="5dp"
        android:paddingBottom="3dp"
        android:text="username"
        app:bl_stroke_color="@color/gray_bg"
        app:bl_stroke_width="1dp" />


    <TextView
        android:id="@+id/tv2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/username"
        android:layout_marginBottom="5dp"
        android:background="@color/white_f7f7f7"
        android:padding="3dp"
        android:text="昵  称："
        android:textColor="@color/gray" />

    <com.noober.background.view.BLTextView
        android:id="@+id/tv_nick_name"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/username"
        android:layout_toRightOf="@+id/tv2"
        android:paddingLeft="6dp"
        android:paddingTop="3dp"
        android:paddingRight="5dp"
        android:paddingBottom="3dp"
        android:text="tom hanks"
        app:bl_stroke_color="@color/gray_bg"
        app:bl_stroke_width="1dp" />

    <TextView
        android:id="@+id/tv3"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv2"
        android:layout_marginBottom="5dp"
        android:background="@color/white_f7f7f7"
        android:padding="3dp"
        android:text="彩票返点："
        android:textColor="@color/gray" />

    <com.noober.background.view.BLTextView
        android:id="@+id/fandian"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv2"
        android:layout_toRightOf="@+id/tv3"
        android:paddingLeft="6dp"
        android:paddingTop="3dp"
        android:paddingRight="5dp"
        android:paddingBottom="3dp"
        android:text="0.0"
        app:bl_stroke_color="@color/gray_bg"
        app:bl_stroke_width="1dp" />

    <TextView
        android:id="@+id/tv4"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv3"
        android:background="@color/white_f7f7f7"
        android:padding="3dp"
        android:text="每天最低量："
        android:textColor="@color/gray" />

    <com.noober.background.view.BLTextView
        android:id="@+id/leastLimit"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv3"
        android:layout_toRightOf="@+id/tv4"
        android:paddingLeft="6dp"
        android:paddingTop="3dp"
        android:paddingRight="5dp"
        android:paddingBottom="3dp"
        android:text="0.0000 元"
        app:bl_stroke_color="@color/gray_bg"
        app:bl_stroke_width="1dp" />

    <com.noober.background.view.BLTextView
        android:id="@+id/remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv3"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_10"
        android:paddingTop="3dp"
        android:paddingRight="@dimen/dp_10"
        android:paddingBottom="3dp"
        android:text="移除"
        app:bl_corners_radius="5dp"
        app:bl_solid_color="@color/gray_bg" />

</com.noober.background.view.BLRelativeLayout>