<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bg"
    android:layout_width="110dp"
    android:layout_height="180dp"
    android:layout_margin="5dp"
    android:background="@mipmap/cq9_item_bg_blue">

    <android.support.v7.widget.CardView
        android:id="@+id/cardLayout"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="25dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="1dp">

        <ImageView
            android:id="@+id/ivIcon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_margin="3dp"
            android:background="@mipmap/default_icon"
            android:scaleType="centerCrop" />
    </android.support.v7.widget.CardView>


    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:maxWidth="95dp"
        android:text="王者荣耀"
        android:textColor="@color/white"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/tvpersongaming"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:gravity="center"
        android:maxWidth="95dp"
        android:text="999人在玩"
        android:textColor="@color/white"
        android:textSize="11dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvpersongaming"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/cq9_game_item_goto_bg"
        android:gravity="center"
        android:paddingLeft="8dp"
        android:paddingTop="2dp"
        android:paddingRight="8dp"
        android:paddingBottom="2dp"
        android:text="进入游戏"
        android:textColor="@color/white"
        android:textSize="12dp" />

    <ImageView
        android:id="@+id/ishot"
        android:layout_width="30dp"
        android:layout_height="16dp"
        android:layout_marginLeft="80dp"
        android:background="@mipmap/cq9_item_hot_icon"
        android:visibility="gone"
        android:translationZ="1dp"/>

</RelativeLayout>