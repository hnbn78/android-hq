<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/colorPrimaryInverse"
              android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="10dp">


        <TextView
            android:id="@+id/open_type"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="@string/open_type"
            android:textColor="@color/black"
            android:textSize="@dimen/text_small"/>

        <CheckBox
            android:id="@+id/agency_icon"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/checkbox_style"
            android:button="@null"
            android:checked="true"/>

        <TextView
            android:id="@+id/agency_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="@string/agence"
            android:textColor="@color/black"
            android:textSize="@dimen/text_small"/>


        <CheckBox
            android:id="@+id/play_icon"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/checkbox_style"
            android:button="@null"/>

        <TextView
            android:id="@+id/play_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/play_icon"
            android:layout_toRightOf="@+id/play_icon"
            android:text="@string/paly"
            android:textColor="@color/black"
            android:textSize="@dimen/text_small"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearlayout_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/user_text"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="@string/account"
            android:textSize="@dimen/text_small"
            android:textColor="@color/black"
            />

        <EditText
            android:id="@+id/etUsername"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:background="@drawable/sh_edittext_bg"
            android:hint="@string/plase_input_user"
            android:paddingLeft="10dp"
            android:maxLength="10"
            android:singleLine="true"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_small"/>

    </LinearLayout>

    <TextView
        android:id="@+id/text_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:text="@string/geshi_text"
        android:textSize="@dimen/text_tiny"/>

    <LinearLayout
        android:id="@+id/password_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >

        <TextView
            android:id="@+id/password_text"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="@string/password"
            android:textSize="@dimen/text_small"
            android:textColor="@color/black"
            />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:layout_height="wrap_content"
            android:background="@drawable/sh_edittext_bg"
            android:hint="@string/login_input_password"
            android:singleLine="true"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_small"/>

    </LinearLayout>

    <TextView
        android:id="@+id/password__show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="80dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:text="@string/format_text"
        android:textSize="@dimen/text_tiny"/>

    <LinearLayout
        android:id="@+id/lottery_return"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_below="@+id/password__show"
        >

        <TextView
            android:id="@+id/lotteryreturn_tv"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="彩票返点:"
            android:textSize="@dimen/text_small"
            android:textColor="@color/black"
            />


        <EditText
            android:id="@+id/etReturn"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:padding="5dp"
            android:background="@drawable/sh_edittext_bg"
            android:hint="请输入返点"
            android:singleLine="true"
            android:inputType="numberDecimal"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_small"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/tvReturnLab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lottery_return"
        android:layout_marginLeft="80dp"
        android:text="开户区间：0.0-0.0"
        android:textSize="@dimen/text_tiny"/>

    <Button
        android:id="@+id/account_bt"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/relative_input"
        android:layout_margin="30dp"
        android:background="@drawable/sl_btn_primary_sh"
        android:padding="5dp"
        android:text="@string/open_account"
        android:textColor="@color/white"
        android:textSize="@dimen/text_normal"
        />
</LinearLayout>
