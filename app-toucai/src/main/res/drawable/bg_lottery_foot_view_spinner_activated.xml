                android:width="0.5dp"
                android:color="#d5d5d5" />

            <size
                android:width="60dp"
                android:height="30dp" />
            <corners android:radius="15dp" />
        </shape>
    </item>
    <item
        android:bottom="12dp"
        android:left="43dp"
        android:right="10dp"
        android:top="12dp">
        <rotate
            android:drawable="@mipmap/ic_pulldown"
            android:fromDegrees="180"
            android:toDegrees="180" />
    </item>

    <item
        android:bottom="1dp"
        android:left="37dp"
        android:right="22dp"
        android:top="1dp">

        <shape android:shape="rectangle">
            <solid android:color="#d5d5d5" />
        </shape>
    </item>

    <item>
        <inset
            android:insetLeft="15dp"
            android:insetRight="22dp">
            <shape android:shape="rectangle">
                <!--<solid android:color="#FF0000" />-->
            </shape>
        </inset>
    </item>
</layer-list>