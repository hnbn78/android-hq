<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_time_length"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:gravity="center"
            android:text="周总销量(元)>=:"
            android:textColor="@color/textColorSecondary"
            android:textSize="@dimen/text_normal" />

        <EditText
            android:id="@+id/etAllSale"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/sh_bd_rect_primary_round_unchecked"
            android:digits="1234567890"
            android:hint="0"
            android:inputType="number"
            android:paddingLeft="@dimen/dp_10"
            android:textSize="@dimen/text_normal" />

    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_profit_length"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:gravity="center"
            android:text="周累计亏损:"
            android:textColor="@color/textColorSecondary"
            android:textSize="@dimen/text_normal" />

        <EditText
            android:id="@+id/etLost"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/sh_bd_rect_primary_round_unchecked"
            android:digits="1234567890"
            android:hint="0"
            android:inputType="number"
            android:paddingLeft="@dimen/dp_10"
            android:textSize="@dimen/text_normal" />
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:gravity="center"
            android:text="分红（%）:"
            android:textColor="@color/textColorSecondary"
            android:textSize="@dimen/text_normal" />

        <EditText
            android:id="@+id/etBonus"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/sh_bd_rect_primary_round_unchecked"
            android:digits="1234567890"
            android:hint="请输入整数"
            android:inputType="number"
            android:paddingLeft="@dimen/dp_10"
            android:textSize="@dimen/text_normal" />
    </TableRow>

    <TableRow
        android:id="@+id/layout_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:gravity="center"
            android:text="有效人数:"
            android:textColor="@color/textColorSecondary"
            android:textSize="@dimen/text_normal" />

        <EditText
            android:id="@+id/etActivity"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/sh_bd_rect_primary_round_unchecked"
            android:digits="1234567890"
            android:hint="请输入整数"
            android:inputType="number"
            android:paddingLeft="@dimen/dp_10"
            android:textSize="@dimen/text_normal" />
    </TableRow>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/gray_bg"
        ></View>

</TableLayout>