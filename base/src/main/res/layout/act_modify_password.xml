<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryInverse">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearlayout"

        android:orientation="vertical"
        android:padding="5dp"
        >


        <EditText
            android:id="@+id/current_password_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:password="true"
            android:padding="10dp"
            android:hint="@string/input_current_password"
            android:layout_below="@+id/linearlayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:imeOptions="actionNext"
            android:inputType="textPassword"
            android:maxLines="1"


            android:background="@color/white"
            android:textSize="@dimen/text_normal"
            android:singleLine="true"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/four_layout"
            android:background="@color/myaccount_title" />
        <EditText
            android:id="@+id/new_password_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textSize="@dimen/text_normal"
            android:password="true"
            android:padding="10dp"

            android:background="@color/white"
            android:inputType="textPassword"
            android:hint="@string/input_new_password"
            android:layout_below="@+id/linearlayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/four_layout"
            android:background="@color/myaccount_title" />

        <EditText
            android:id="@+id/aggin_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:padding="10dp"
            android:background="@color/white"
            android:password="true"
            android:inputType="textPassword"
            android:hint="@string/again_input_new_password"
            android:textSize="@dimen/text_normal"
            android:layout_below="@+id/linearlayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/four_layout"
            android:background="@color/myaccount_title" />

        <EditText
            android:id="@+id/zijingPwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:ems="10"
            android:padding="10dp"
            android:background="@color/white"
            android:password="true"
            android:inputType="textPassword"
            android:hint="请输入资金密码"
            android:textSize="@dimen/text_normal"
            android:layout_below="@+id/linearlayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

   <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/advice_text"
         android:text="@string/advice_password"
       android:textSize="@dimen/text_normal"
        android:padding="5dp"
       />
    </LinearLayout>




</RelativeLayout>
