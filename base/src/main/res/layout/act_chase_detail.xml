<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_10">

            <TextView
                style="@style/text_chase_detail_style"
                android:text="订单编号：" />

            <TextView
                android:id="@+id/tv_order_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/textColorSecondary" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:paddingLeft="@dimen/dp_10">

            <TextView
                style="@style/text_chase_detail_style"
                android:text="彩种："
                android:textColor="@color/textColorSecondary" />

            <TextView
                android:id="@+id/tv_order_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/textColorSecondary" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:paddingLeft="@dimen/dp_10">

            <TextView
                style="@style/text_chase_detail_style"
                android:text="玩法："
                android:textColor="@color/textColorSecondary" />

            <TextView
                android:id="@+id/tv_play_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/textColorSecondary" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:paddingLeft="@dimen/dp_10">

            <TextView
                style="@style/text_chase_detail_style"
                android:text="资金模式："
                android:textColor="@color/textColorSecondary" />

            <TextView
                android:id="@+id/tv_money_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/textColorSecondary" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:paddingLeft="@dimen/dp_10">

            <TextView
                style="@style/text_chase_detail_style"
                android:text="加入时间："
                android:textColor="@color/textColorSecondary" />

            <TextView
                android:id="@+id/tv_join_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/textColorSecondary" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:paddingLeft="@dimen/dp_10">

            <TextView
                style="@style/text_chase_detail_style"
                android:text="投注金额："
                android:textColor="@color/textColorSecondary" />

            <TextView
                android:id="@+id/tv_confirm_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/textColorSecondary" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:paddingLeft="@dimen/dp_10">

            <TextView
                style="@style/text_chase_detail_style"
                android:text="奖金："
                android:textColor="@color/textColorSecondary" />

            <TextView
                android:id="@+id/tv_award"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/textColorSecondary" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:paddingLeft="@dimen/dp_10">

            <TextView
                style="@style/text_chase_detail_style"
                android:text="状态："
                android:textColor="@color/textColorSecondary" />

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/textColorSecondary" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:paddingLeft="@dimen/dp_10">

            <TextView
                style="@style/text_chase_detail_style"
                android:text="期号："
                android:textColor="@color/textColorSecondary" />

            <TextView
                android:id="@+id/tv_period_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/textColorSecondary" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:paddingLeft="@dimen/dp_10">

            <TextView
                style="@style/text_chase_detail_style"
                android:text="注数："
                android:textColor="@color/textColorSecondary" />

            <TextView
                android:id="@+id/tv_order_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/textColorSecondary" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:paddingLeft="@dimen/dp_10">

            <TextView
                style="@style/text_chase_detail_style"
                android:text="返点："
                android:textColor="@color/textColorSecondary" />

            <TextView
                android:id="@+id/tv_back_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/textColorSecondary" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:paddingLeft="@dimen/dp_10">

            <TextView
                style="@style/text_chase_detail_style"
                android:text="投注内容："
                android:textColor="@color/textColorSecondary" />

            <TextView
                android:id="@+id/tv_award_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/textColorSecondary" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>