<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="88.5dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tvDigitPowerLab"
        style="@style/text_digit_power_lab"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:text="号码"
        android:textSize="13sp" />

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <View
            android:id="@+id/iv_long"
            android:layout_width="59.5dp"
            android:layout_height="match_parent"
            android:layout_gravity="left|center_vertical"
            android:background="@drawable/ic_bg_longhu" />

        <View
            android:id="@+id/iv_hu"
            android:layout_width="59.5dp"
            android:layout_height="match_parent"
            android:layout_gravity="right|center_vertical"
            android:background="@drawable/ic_bg_longhu_up_to_down" />


        <LinearLayout
            android:id="@+id/glDigits"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">


            <RelativeLayout
                android:id="@+id/vgDigitCell0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="gone">

                <RelativeLayout
                    android:id="@+id/vgNumBalls0"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true">

                    <TextView
                        android:id="@+id/tvNum0"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_above="@+id/vCenter0"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/bg_lottery_play_view_board_jd_item_long"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@color/lottery_play_board_jd_long_text"
                        android:textSize="18sp"
                        android:visibility="visible" />

                    <View
                        android:id="@+id/vCenter0"
                        android:layout_width="1dp"
                        android:layout_height="1dp"
                        android:layout_centerInParent="true"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tvBall0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/vCenter0"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@color/lottery_play_board_jd_long_text"
                        android:textSize="@dimen/text_tiny"
                        android:visibility="gone" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/vgDigitCell1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="gone">

                <RelativeLayout
                    android:id="@+id/vgNumBalls1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true">

                    <TextView
                        android:id="@+id/tvNum1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_above="@+id/vCenter1"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/bg_lottery_play_view_board_jd_item_he"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@color/lottery_play_board_jd_he_text"
                        android:textSize="18sp"
                        android:visibility="visible" />

                    <View
                        android:id="@+id/vCenter1"
                        android:layout_width="1dp"
                        android:layout_height="1dp"
                        android:layout_centerInParent="true"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tvBall1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/vCenter1"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@color/lottery_play_board_jd_he_text"
                        android:textSize="@dimen/text_tiny"
                        android:visibility="gone" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/vgDigitCell2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="gone">

                <RelativeLayout
                    android:id="@+id/vgNumBalls2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true">

                    <TextView
                        android:id="@+id/tvNum2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_above="@+id/vCenter2"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/bg_lottery_play_view_board_jd_item_hu"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@color/lottery_play_board_jd_hu_text"
                        android:textSize="18sp"
                        android:visibility="visible" />

                    <View
                        android:id="@+id/vCenter2"
                        android:layout_width="1dp"
                        android:layout_height="1dp"
                        android:layout_centerInParent="true"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tvBall2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/vCenter2"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@color/lottery_play_board_jd_hu_text"
                        android:textSize="@dimen/text_tiny"
                        android:visibility="gone" />
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>


    </FrameLayout>
</LinearLayout>