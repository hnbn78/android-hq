<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="150dp"
              android:layout_height="80dp"
              android:orientation="horizontal"
              android:gravity="center"
              >

    <com.pearl.view.ToggleImageButton
        android:id="@+id/tibBg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/sh_bd_gray_white_rect_thin"
        android:clickable="false"
        />

    <ImageView
        android:id="@+id/ivChargeType"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:padding="10dp"
        android:scaleType="centerInside"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/ic_dianzizhifu_activited"
        />


    <TextView
        android:id="@+id/tvChargeType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivChargeType"
        android:text="支付宝"
        android:singleLine="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textColor="@color/black"
        android:textSize="@dimen/text_normal"/>

    <ImageView
        android:id="@+id/ivPromotion"
        android:layout_width="40dp"
        android:layout_height="36dp"
        android:scaleType="centerInside"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        />
</RelativeLayout>
