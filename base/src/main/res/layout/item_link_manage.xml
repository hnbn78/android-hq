<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/dp_10"
    android:baselineAligned="false"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_register_code"
        style="@style/text_link_manage_style"
        android:layout_gravity="center_vertical"
        android:gravity="left|center_vertical"
        android:textColor="@color/red" />

    <TextView
        android:id="@+id/tv_user_type"
        style="@style/text_link_manage_style" />

    <TextView
        android:id="@+id/tv_back_point"
        style="@style/text_link_manage_style" />

    <TextView
        android:id="@+id/tv_over_date"
        style="@style/text_link_manage_style" />

    <Space
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_copy_link"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/sh_bd_rec_darkgray_darkgray_round"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:text="复制"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_delete_link"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/sh_bd_rec_red_red_round"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:text="删除"
            android:textColor="@color/white" />

    </LinearLayout>
    <Space
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
</LinearLayout>
