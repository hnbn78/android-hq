<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/vgLotteryKind"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:orientation="vertical">

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/vgContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_widthPercent="22%w"
        app:layout_heightPercent="22%w"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:background="@drawable/sh_btn_rect_white_white_round"
        >

        <ImageView
            android:id="@+id/ivIcon"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_lottery_default"/>

        <TextView
            android:id="@+id/tvName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivIcon"
            android:layout_marginTop="3dp"
            android:maxLength="9"
            android:singleLine="true"
            android:text="asdfa"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textColor="@color/textColorSecondary"
            android:textSize="12sp"/>

        <ImageView
            android:id="@+id/ivAddBtn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:paddingLeft="16dp"
            android:paddingRight="4dp"
            android:layout_marginRight="6dp"
            android:paddingBottom="12dp"
            android:layout_alignParentRight="true"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_edit_add"/>

        <ImageView
            android:id="@+id/ivDeleteBtn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:paddingLeft="16dp"
            android:paddingRight="4dp"
            android:layout_marginRight="6dp"
            android:paddingBottom="12dp"
            android:layout_alignParentRight="true"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_edit_delete"/>
    </com.zhy.android.percent.support.PercentRelativeLayout>

</LinearLayout>
