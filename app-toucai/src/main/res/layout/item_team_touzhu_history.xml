<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_bet_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="4dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="6dp"
    android:background="@mipmap/bg_bet"
    android:minHeight="80dp"
    android:orientation="horizontal"
    android:paddingTop="@dimen/recycler_devider_margin_5dp"
    android:paddingBottom="@dimen/recycler_devider_margin_5dp"
    android:elevation="2dp">

    <LinearLayout
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.8"
        android:gravity="center"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name" />

        <TextView
            android:id="@+id/tv_Lottery_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="5dp"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_lottery_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#999999"
            android:textSize="11dp" />

    </LinearLayout>

    <TextView
        android:layout_width="1dp"
        android:layout_height="60dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/recycler_devider_margin_5dp"
        android:background="@color/white_f4f4f4" />


    <LinearLayout
        android:id="@+id/ll_play_method"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_play_method1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/sh_bd_milk_round"
            android:gravity="center"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:scaleX="0.8"
            android:textColor="@color/red_ff7600"
            android:textSize="@dimen/small_textsize" />

        <TextView
            android:id="@+id/tv_play_method2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:background="@drawable/sh_bd_milk_round"
            android:gravity="center"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:scaleX="0.8"
            android:textColor="@color/red_ff7600"
            android:textSize="@dimen/small_textsize"
            android:visibility="gone"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.8"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="8dp">

        <TextView
            android:id="@+id/tv_lottery_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"

            android:text="0.00"
            android:textColor="@color/red_mine"
            android:textSize="18dp"
            android:scaleY="1.1"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_lottery_profit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="+000.00"
            android:textColor="@color/red_mine"
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_lottery_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/blue_mine"
            android:textSize="14dp"
            />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:paddingRight="5dp">

        <TextView
            android:id="@+id/fandian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_toRightOf="@+id/add"
            android:ellipsize="end"
            android:maxLength="4"
            android:scaleX="0.9"
            android:scaleY="1.1"
            android:singleLine="true"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/fandian"
            android:layout_marginLeft="5dp"
            android:text="+"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fandian"
            android:text="返点额"
            android:textColor="@color/gray_content"
            android:layout_marginTop="3dp"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

</LinearLayout>