<?xml version="1.0" encoding="utf-8"?>
<com.noober.background.view.BLLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    app:bl_stroke_width="0.5dp"
    app:bl_stroke_color="@color/gray_line"
    app:bl_solid_color="@color/white">

    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:background="#FF000000"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/dp_8">

        <TextView
            android:id="@+id/tv_title"
            style="@style/text_digit_power_lab"
            android:fontFamily="cursive"
            android:text="1尾"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/tv_odds"
            style="@style/text_digit_power_lab"
            android:layout_marginTop="3dp"
            android:text="6.72"
            android:textColor="#FFFFFF"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/tv_odds_label"
            style="@style/text_digit_power_lab"
            android:text="赔率"
            android:textColor="#FFFFFF"
            android:textSize="12dp"
            android:visibility="gone" />
    </LinearLayout>

    <GridLayout
        android:id="@+id/glDigits"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:alignmentMode="alignBounds"
        android:columnCount="5"
        android:rowCount="1"
        android:useDefaultMargins="true" />

</com.noober.background.view.BLLinearLayout>
