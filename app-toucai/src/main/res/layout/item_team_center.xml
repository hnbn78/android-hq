<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="14dp"
    android:layout_marginRight="14dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/shape_b0_r8_white"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/tvtips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="15dp"
        android:textColor="@color/gray_content" />

    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvtips"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dp_10">

        <ProgressBar
            android:id="@+id/progress"
            style="@style/progressBarHorizontal"
            android:layout_width="175dp"
            android:layout_height="12dp"
            android:layout_gravity="center_horizontal"
            android:progressDrawable="@drawable/team_center_pb_style" />

        <TextView
            android:id="@+id/progressShuju"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/progress"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="3dp"
            android:textColor="@color/blue_2396f7" />
    </LinearLayout>


    <TextView
        android:id="@+id/btn"
        android:layout_width="100dp"
        android:layout_height="33dp"
        android:layout_below="@+id/tvtips"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:background="@mipmap/team_center_btn"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/complete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@mipmap/team_center_complete"
        android:visibility="gone" />

</RelativeLayout>