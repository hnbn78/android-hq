<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="29.0dip"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_issue_name"
            android:layout_width="59.0dip"
            android:layout_height="match_parent"
            android:background="@drawable/bg_edit_black"
            android:gravity="center"
            android:text="期 数"
            android:textColor="@color/white"
            android:textSize="12.0dip"
            android:textStyle="bold" />

        <com.pearl.view.trendchart.HeaderHorizontalScrollView
            android:id="@+id/game_trend_header_scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffcac8c8"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="29.0dip"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/game_trend_header_linear"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <com.pearl.view.trendchart.HeadCustomGridView
                        android:id="@+id/game_trend_grid_header"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/game_trend_header_other_linear"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    />
            </LinearLayout>
        </com.pearl.view.trendchart.HeaderHorizontalScrollView>
    </LinearLayout>
</LinearLayout>