<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_10"
    android:layout_marginBottom="@dimen/dp_10"
    >
    
    <TextView
        android:id="@+id/tv_activity_name"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/sh_bd_rec_quarter_red_round"
        android:text="天天反水"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="@dimen/text_xlarge"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/sh_bd_rec_quarter_white_round"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tv_activity_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2018-12-20 9:00"
            android:maxLines="2"
            android:gravity="center"
            android:textSize="@dimen/text_large"
            android:layout_gravity="center_vertical"
            />

        <TextView
            android:id="@+id/tv_activity_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="+600.00"
            android:textSize="@dimen/text_xlarge"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:layout_gravity="center_vertical"
            />

        <TextView
            android:id="@+id/tv_activity_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="已到账"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_xlarge"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            />

    </LinearLayout>

</LinearLayout>