<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvIssueDeadLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:text="距000期截止: 00:00"

            android:textColor="@color/text_gray_1"
            android:textSize="@dimen/text_normal"
            />

        <com.pearl.view.SlidingDrawer
            android:id="@+id/sliding_drawer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <!--被覆盖层-->
            <LinearLayout
                android:id="@id/non_slidable_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvOpenDateLab"
                        style="@style/text_lottery_play_issue"
                        android:layout_weight="3"
                        android:text="时间"/>

                    <TextView
                        android:id="@+id/tvIssueNoLab"
                        style="@style/text_lottery_play_issue"
                        android:layout_weight="3"
                        android:text="期号"
                        />

                    <TextView
                        android:id="@+id/tvOpenNumLab"
                        style="@style/text_lottery_play_issue"
                        android:layout_weight="4"
                        android:text="开奖号码"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:background="@color/colorPrimary"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvOpenDate1"
                        style="@style/text_lottery_play_issue"
                        android:layout_weight="3"
                        android:text="0000-00-00"
                        />

                    <TextView
                        android:id="@+id/tvIssueNo1"
                        style="@style/text_lottery_play_issue"
                        android:layout_weight="3"
                        android:text="00000000-000"
                        />

                    <TextView
                        android:id="@+id/tvOpenNum1"
                        style="@style/text_lottery_play_issue"
                        android:layout_weight="4"
                        android:text="0,0,0,0,0"
                        android:textColor="@color/red_dark"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:background="@color/colorPrimary"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvOpenDate2"
                        style="@style/text_lottery_play_issue"
                        android:layout_weight="3"
                        android:text="0000-00-00"
                        />

                    <TextView
                        android:id="@+id/tvIssueNo2"
                        style="@style/text_lottery_play_issue"
                        android:layout_weight="3"
                        android:text="00000000-000"
                        />

                    <TextView
                        android:id="@+id/tvOpenNum2"
                        style="@style/text_lottery_play_issue"
                        android:layout_weight="4"
                        android:text="0,0,0,0,0"
                        android:textColor="@color/red_dark"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:background="@color/colorPrimary"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvOpenDate3"
                        style="@style/text_lottery_play_issue"
                        android:layout_weight="3"
                        android:text="0000-00-00"
                        />

                    <TextView
                        android:id="@+id/tvIssueNo3"
                        style="@style/text_lottery_play_issue"
                        android:layout_weight="3"
                        android:text="00000000-000"
                        />

                    <TextView
                        android:id="@+id/tvOpenNum3"
                        style="@style/text_lottery_play_issue"
                        android:layout_weight="4"
                        android:text="0,0,0,0,0"
                        android:textColor="@color/red_dark"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:background="@color/colorPrimary"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvOpenDate4"
                        style="@style/text_lottery_play_issue"
                        android:layout_weight="3"
                        android:text="0000-00-00"
                        />

                    <TextView
                        android:id="@+id/tvIssueNo4"
                        style="@style/text_lottery_play_issue"
                        android:layout_weight="3"
                        android:text="00000000-000"
                        />

                    <TextView
                        android:id="@+id/tvOpenNum4"
                        style="@style/text_lottery_play_issue"
                        android:layout_weight="4"
                        android:text="0,0,0,0,0"
                        android:textColor="@color/red_dark"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:background="@color/colorPrimary"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvOpenDate5"
                        style="@style/text_lottery_play_issue"
                        android:layout_weight="3"
                        android:text="0000-00-00"
                        />

                    <TextView
                        android:id="@+id/tvIssueNo5"
                        style="@style/text_lottery_play_issue"
                        android:layout_weight="3"
                        android:text="00000000-000"
                        />

                    <TextView
                        android:id="@+id/tvOpenNum5"
                        style="@style/text_lottery_play_issue"
                        android:layout_weight="4"
                        android:text="0,0,0,0,0"
                        android:textColor="@color/red_dark"
                        />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@null"
                    android:gravity="center"
                    android:text="点击助手开奖号码可查看更多"
                    android:textColor="@color/text_golden"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@id/slidable_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/vgChooseTitled"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <View
                            style="@style/devider_h_light"
                            android:layout_width="0dp"
                            android:layout_height="0.75dp"
                            android:layout_weight="1"/>

                        <ImageView
                            android:layout_width="37dp"
                            android:layout_height="6dp"
                            android:src="@mipmap/ic_bet_detail_head_up"/>

                        <View
                            style="@style/devider_h_light"
                            android:layout_width="0dp"
                            android:layout_height="0.75dp"
                            android:layout_weight="1"/>
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/tvPlaySelector"
                            android:layout_alignTop="@+id/tvPlaySelector"
                            android:layout_toLeftOf="@+id/tvPlaySelector"
                            android:ems="1"
                            android:text="玩法"
                            android:textColor="@color/text_gray_3"
                            android:textSize="@dimen/text_small"/>

                        <TextView
                            android:id="@+id/tvPlaySelector"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/sh_bd_rec_gray_white_round"
                            android:gravity="center"
                            android:paddingLeft="3dp"
                            android:paddingRight="25dp"
                            android:text=""
                            android:textSize="@dimen/text_large"
                            />

                        <ImageView
                            android:id="@+id/ivPlaySelector"
                            android:layout_width="12dp"
                            android:layout_height="10dp"
                            android:layout_alignBottom="@+id/tvPlaySelector"
                            android:layout_alignRight="@+id/tvPlaySelector"
                            android:layout_alignTop="@+id/tvPlaySelector"
                            android:layout_marginRight="10dp"
                            android:src="@mipmap/ic_bet_detail_choose_down"/>
                    </RelativeLayout>
                </LinearLayout>

                <FrameLayout
                    android:id="@+id/vgContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>


        </com.pearl.view.SlidingDrawer>

    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            />

        <FrameLayout
            android:id="@+id/vgBottomGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#aa000000"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">

                <View
                    android:layout_width="0dp"
                    android:layout_height="10dp"
                    android:layout_weight="1"
                    />

                <View
                    android:layout_width="0dp"
                    android:layout_height="10dp"
                    android:layout_weight="1"
                    />

                <TextView
                    android:id="@+id/tvMakeNo"
                    style="@style/text_lottery_play_func"
                    android:background="@drawable/sh_bd_rec_darkgray_darkgray_round"
                    android:text="清楚号码" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="10dp"
                    android:layout_weight="1"
                    />

                <TextView
                    android:id="@+id/tvAddNum"
                    style="@style/text_lottery_play_func"
                    android:background="@drawable/sh_bd_rec_lightblue_lightblue_round"
                    android:text="复制号码" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="10dp"
                    android:layout_weight="1"
                    />

                <TextView
                    android:id="@+id/tvShoppingCart"
                    style="@style/text_lottery_play_func"
                    android:background="@drawable/sh_bd_rec_lightbrown_lightbrown_round"
                    android:text="立即生成" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="10dp"
                    android:layout_weight="1"
                    />

                <TextView
                    android:id="@+id/tvBuy"
                    style="@style/text_lottery_play_func"
                    android:background="@drawable/sh_bd_rec_red_red_round"
                    android:text="确定投注"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="10dp"
                    android:layout_weight="1"
                    />
            </LinearLayout>
        </FrameLayout>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
