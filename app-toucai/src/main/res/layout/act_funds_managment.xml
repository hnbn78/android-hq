<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@color/colorPrimaryInverse"
    >


    <RelativeLayout
        android:id="@+id/rlBindcard"
        style="@style/vg_list_container">


        <ImageView
            android:id="@+id/imicon"
            android:src="@mipmap/person_manager_tx"

            style="@style/iv_list_left_icon"/>

        <TextView
            android:id="@+id/tvBind"
            android:layout_toEndOf="@+id/imicon"
            android:layout_toRightOf="@+id/imicon"
            android:text="@string/despoit"
            style="@style/tv_list_title"/>

        <ImageView
            android:id="@+id/tvarrow"
            android:src="@drawable/recharge_arrow"
            style="@style/iv_list_right_arrow"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rlBindcard"
        android:background="@color/myaccount_title"/>

    <RelativeLayout
        android:id="@+id/rlUserLayout"
        style="@style/vg_list_container">


        <ImageView
            android:id="@+id/imUser"
            android:src="@mipmap/person_manager_tx"
            style="@style/iv_list_left_icon"/>

        <TextView
            android:id="@+id/tvUser"
            android:layout_toEndOf="@+id/imUser"
            android:layout_toRightOf="@+id/imUser"
            android:text="@string/Withdrawals"
            style="@style/tv_list_title"/>

        <ImageView
            android:id="@+id/userArrow"
            android:src="@drawable/recharge_arrow"
            style="@style/iv_list_right_arrow"/>

    </RelativeLayout>

    <View
        android:id="@+id/vDevider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rlUserLayout"
        android:visibility="invisible"
        android:background="@color/myaccount_title"/>

    <RelativeLayout
        android:id="@+id/rlBindNumberLayout"
        android:visibility="invisible"
        style="@style/vg_list_container">


        <ImageView
            android:id="@+id/imBind"
            android:src="@mipmap/person_manager_tx"
            style="@style/iv_list_left_icon"/>

        <TextView
            android:id="@+id/tvBind_number"
            android:layout_toEndOf="@+id/imBind"
            android:layout_toRightOf="@+id/imBind"
            android:text="@string/transfer"
            style="@style/tv_list_title"/>

        <ImageView
            android:id="@+id/BindArrow"
            android:src="@drawable/recharge_arrow"
            style="@style/iv_list_right_arrow"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rlUserLayout"
        android:background="@color/myaccount_title"/>
</LinearLayout>
