<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <TextView
        android:id="@+id/labBonus"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="历史投注记录"
        android:paddingLeft="15dp"
        android:gravity="left|center_vertical"
        android:textColor="#7D7F81"
        android:background="@color/colorPrimaryInverse"
        android:textSize="@dimen/text_large"/>

    <Button
        android:id="@+id/tvMore"
        android:layout_width="50dp"
        android:layout_height="27dp"
        android:textColor="@color/white"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/labBonus"
        android:layout_alignBottom="@+id/labBonus"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:background="@drawable/sl_btn_red_rounded"
        android:textSize="@dimen/text_normal"
        android:text="更多"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvOrderList"
        android:layout_below="@+id/labBonus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="false"/>

</RelativeLayout>