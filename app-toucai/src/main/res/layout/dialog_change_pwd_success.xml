<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivHead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:src="@mipmap/bg_find_pwd_success" />

    <TextView
        android:id="@+id/tvBottomInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ivHead"
        android:layout_alignRight="@+id/ivHead"
        android:layout_below="@+id/ivHead"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/bg_dialog_success_bottom_1"
        android:gravity="center"
        android:text="完成并登录 3s"
        android:padding="@dimen/dp_8"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/text_large" />

</RelativeLayout>