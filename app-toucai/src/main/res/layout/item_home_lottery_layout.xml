<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@mipmap/home_11xuan5"
            android:gravity="center"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@mipmap/home_11xuan5"
            android:gravity="center"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv3"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@mipmap/home_11xuan5"
            android:gravity="center"
            android:textSize="15dp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivSelect1"
            android:layout_width="17dp"
            android:layout_height="9dp"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="5dp"
            android:background="@mipmap/home_lottery_selected"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/ivSelect2"
            android:layout_width="17dp"
            android:layout_height="9dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:background="@mipmap/home_lottery_selected"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/ivSelect3"
            android:layout_width="17dp"
            android:layout_height="9dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_marginRight="55dp"
            android:background="@mipmap/home_lottery_selected"
            android:visibility="gone" />

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/innerRecycleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_bg_light_gray_r5"
        android:paddingBottom="10dp"
        android:visibility="gone" />
</LinearLayout>
