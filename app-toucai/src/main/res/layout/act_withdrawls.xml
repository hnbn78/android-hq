<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryInverse"

    >



    <RelativeLayout
        android:id="@+id/second__layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_margin="3dp"
        android:layout_marginTop="10dp"
        android:padding="5dp">


        <TextView
            android:id="@+id/modify_funds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:text="@string/guangda"
            android:textSize="16sp"

            />

        <TextView
            android:id="@+id/modify_funds_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/cash_detail_bank"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/modify_founds_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_common_arrow_right"

            />
    </RelativeLayout>

    <View
        android:id="@+id/second__view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/second__layout"
        android:background="@color/myaccount_title" />

    <RelativeLayout
        android:id="@+id/three__layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/second__view"
        android:layout_margin="3dp"
        android:layout_marginTop="10dp"
        android:padding="5dp">


        <TextView
            android:id="@+id/three_funds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:text="**883938398"
            android:textSize="16sp"

            />

        <TextView
            android:id="@+id/three_funds_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/bind_bank_card_number"
            android:textSize="16sp" />

    </RelativeLayout>

    <View
        android:id="@+id/view_one"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/three__layout"
        android:background="@color/myaccount_title" />

    <RelativeLayout
        android:id="@+id/four__layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_one"
        android:layout_margin="3dp"

        android:padding="5dp">


        <TextView
            android:id="@+id/four_funds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:text="**å•Š"
            android:textSize="16sp"

            />

        <TextView
            android:id="@+id/four_funds_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/name"
            android:textSize="16sp" />

    </RelativeLayout>

    <View
        android:id="@+id/view_two"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/four__layout"
        android:background="@color/myaccount_title" />

    <RelativeLayout
        android:id="@+id/five__layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_two"
        android:layout_margin="3dp"

        android:padding="5dp">


        <EditText
            android:id="@+id/funds_et"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="80dp"

            android:textSize="16sp"
             android:background="@drawable/sh_edittext"
            />

        <TextView
            android:id="@+id/five_funds_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/with_total"
            android:textSize="16sp" />

    </RelativeLayout>

    <View
        android:id="@+id/view_three"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/five__layout"
        android:background="@color/myaccount_title" />

    <RelativeLayout
        android:id="@+id/six__layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_three"
        android:layout_margin="3dp"
        android:padding="5dp">


        <EditText
            android:id="@+id/withdrawals_et"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="80dp"
            android:background="@drawable/sh_edittext"
            android:textSize="16sp"

            />

        <TextView
            android:id="@+id/six_funds_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/title_fund_password"
            android:textSize="16sp" />

    </RelativeLayout>

    <View
        android:id="@+id/view_four"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/six__layout"
        android:background="@color/myaccount_title" />

    <Button
        android:id="@+id/confirm_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_four"
        android:layout_marginTop="40dp"
        android:background="@drawable/sh_exit_login"
        android:padding="5dp"
        android:text="@string/sure"
        android:textColor="@color/myaccount_title"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/withdrawals_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/confirm_bt"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:text="@string/with_time"
        android:textSize="16sp"

        />

</RelativeLayout>
