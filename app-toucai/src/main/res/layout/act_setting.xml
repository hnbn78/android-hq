<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvAccountSetting"
        android:layout_width="match_parent"
        android:layout_height="@dimen/def_height"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white"
        android:drawableLeft="@mipmap/ic_setting_account"
        android:drawableRight="@mipmap/ic_right_arrow"
        android:drawablePadding="@dimen/dp_10"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dp_10"
        android:paddingEnd="@dimen/dp_10"
        android:text="@string/account_setting"
        android:textColor="@color/text_666"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tvSecuritySetting"
        android:layout_width="match_parent"
        android:layout_height="@dimen/def_height"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white"
        android:drawableLeft="@mipmap/ic_setting_safety"
        android:drawableRight="@mipmap/ic_right_arrow"
        android:drawablePadding="@dimen/dp_10"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dp_10"
        android:paddingEnd="@dimen/dp_10"
        android:text="@string/security_setting"
        android:textColor="@color/text_666" />


    <TextView
        android:id="@+id/tvNewNotice"
        android:layout_width="match_parent"
        android:layout_height="@dimen/def_height"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:drawableLeft="@mipmap/ic_setting_news"
        android:drawableRight="@mipmap/ic_right_arrow"
        android:drawablePadding="@dimen/dp_10"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dp_10"
        android:paddingEnd="@dimen/dp_10"
        android:text="@string/new_notice"
        android:textColor="@color/text_666" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:background="@color/colorDevider" />

    <TextView
        android:id="@+id/tvHelp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/def_height"
        android:background="@color/white"
        android:drawableLeft="@mipmap/ic_setting_help"
        android:drawableRight="@mipmap/ic_right_arrow"
        android:drawablePadding="@dimen/dp_10"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dp_10"
        android:paddingEnd="@dimen/dp_10"
        android:text="@string/help_and_feedback"
        android:textColor="@color/text_666" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:background="@color/colorDevider" />


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:background="@color/colorDevider" />

    <LinearLayout
        android:id="@+id/vgVersion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tvAboutApp"
            android:layout_width="0dp"
            android:layout_height="@dimen/def_height"
            android:layout_weight="1"
            android:background="@color/white"
            android:drawableLeft="@mipmap/ic_setting_about"
            android:drawableRight="@mipmap/ic_right_arrow"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_10"
            android:text="@string/setting_about_us"
            android:textColor="@color/text_666" />

        <!--<TextView-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_height="@dimen/def_height"-->
        <!--android:layout_weight="1"-->
        <!--android:background="@color/white"-->
        <!--android:drawableLeft="@mipmap/ic_person_set_update"-->
        <!--android:drawablePadding="@dimen/dp_10"-->
        <!--android:gravity="center_vertical"-->
        <!--android:paddingEnd="@dimen/dp_10"-->
        <!--android:paddingStart="@dimen/dp_10"-->
        <!--android:text="@string/version_update"-->
        <!--android:textColor="@color/text_666" />-->

    </LinearLayout>


    <Button
        android:id="@+id/btnExit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="@dimen/dp_16"
        android:background="@drawable/shape_round_corner_primary"
        android:text="@string/exit_login"
        android:textColor="@color/white"
        android:textSize="@dimen/text_large" />

    <TextView
        android:id="@+id/tvVersion"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="bottom|center"
        android:paddingStart="@dimen/dp_10"
        android:paddingEnd="@dimen/dp_10"
        android:paddingBottom="6dp"
        android:textColor="@color/text_666"
        android:textSize="16dp" />

</LinearLayout>