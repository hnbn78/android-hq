<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="@dimen/dp_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="投注号码"
                android:textSize="@dimen/text_large" />

            <TextView
                android:id="@+id/tv_bet_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_xxlarge" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="@dimen/dp_10"
                android:src="@mipmap/bg_line" />

            <LinearLayout style="@style/bet_detail_layout_style">

                <TextView
                    style="@style/text_bet_detail_style"
                    android:text="订单编号" />

                <TextView
                    android:id="@+id/tv_order_num"
                    style="@style/text_bet_detail_content_style" />
            </LinearLayout>

            <LinearLayout style="@style/bet_detail_layout_style">

                <TextView
                    android:id="@+id/tv_issue"
                    style="@style/text_bet_detail_style"
                    android:text="开始期号" />

                <TextView
                    android:id="@+id/tv_issue_num"
                    style="@style/text_bet_detail_content_style" />
            </LinearLayout>

            <LinearLayout style="@style/bet_detail_layout_style"
                android:id="@+id/vgCountIssue"
                >

                <TextView
                    style="@style/text_bet_detail_style"
                    android:text="总期号" />

                <TextView
                    android:id="@+id/tvCountIssue"
                    style="@style/text_bet_detail_content_style" />
            </LinearLayout>

            <LinearLayout style="@style/bet_detail_layout_style"
                android:id="@+id/vgCountChased">

                <TextView
                    style="@style/text_bet_detail_style"
                    android:text="已追期号" />

                <TextView
                    android:id="@+id/tvCountChased"
                    style="@style/text_bet_detail_content_style" />
            </LinearLayout>

            <LinearLayout style="@style/bet_detail_layout_style"
                android:id="@+id/vgLotteryName">

                <TextView
                    style="@style/text_bet_detail_style"
                    android:text="彩种" />

                <TextView
                    android:id="@+id/tvLotteryName"
                    style="@style/text_bet_detail_content_style" />
            </LinearLayout>

            <LinearLayout style="@style/bet_detail_layout_style">

                <TextView
                    style="@style/text_bet_detail_style"
                    android:id="@+id/tvGameType"
                    android:text="游戏类别" />

                <TextView
                    android:id="@+id/tv_game_type"
                    style="@style/text_bet_detail_content_style" />
            </LinearLayout>

            <LinearLayout
                style="@style/bet_detail_layout_style"
               android:id="@+id/gameResult">

                <TextView
                    style="@style/text_bet_detail_style"
                    android:text="开奖结果" />

                <TextView
                    android:id="@+id/tv_game_result"
                    style="@style/text_bet_detail_content_style"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/layout_open_code"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:orientation="horizontal">


                </LinearLayout>
            </LinearLayout>

            <LinearLayout style="@style/bet_detail_layout_style">

                <TextView
                    style="@style/text_bet_detail_style"
                    android:text="订单时间" />

                <TextView
                    android:id="@+id/tv_order_time"
                    style="@style/text_bet_detail_content_style" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/vg_result_status"
                style="@style/bet_detail_layout_style"
                >

                <TextView
                    style="@style/text_bet_detail_style"
                    android:text="中奖状态" />

                <TextView
                    android:id="@+id/tv_result_status"
                    style="@style/text_bet_detail_content_style" />
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:scaleType="centerCrop"
            android:src="@mipmap/bg_middle_dot" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="-0.3dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dp_10"
            android:paddingLeft="20dp">

            <LinearLayout style="@style/bet_detail_layout_style">

                <TextView
                    android:id="@+id/tv_bet_unit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="投注金额(元)"
                    android:textColor="#333333"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_award_unit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="中奖金额(元)"
                    android:textColor="#333333"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="状态"
                    android:textColor="#333333"
                    android:textSize="16sp" />


            </LinearLayout>

            <LinearLayout style="@style/bet_detail_layout_style">

                <TextView
                    android:id="@+id/tv_bet_amount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:lineSpacingExtra="6.5sp"
                    android:textColor="#ff3e3d"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_award_amount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:lineSpacingExtra="6.5sp"
                    android:text="——"
                    android:textColor="#333333"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:lineSpacingExtra="6.5sp"
                    android:textColor="#ff8c00"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">


            <Button
                android:id="@+id/btn_once_more"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="35dp"
                android:background="@drawable/shape_round_corner_primary"
                android:textColor="@color/white"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:text="再来一注"
                />

            <Button
                android:id="@+id/btn_cancel_order"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="35dp"
                android:layout_marginLeft="40dp"
                android:background="@drawable/sh_bd_rec_pink_white_arc"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:text="撤销投注"
                android:textColor="@color/colorPrimary"
                android:visibility="gone"
                />

            <Button
                android:id="@+id/btn_chase_list"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="35dp"
                android:layout_marginLeft="40dp"
                android:background="@drawable/sh_bd_rec_pink_white_arc"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:text="追号列表"
                android:textColor="@color/colorPrimary"
                android:visibility="gone"
                />

        </LinearLayout>
    </LinearLayout>
</ScrollView>