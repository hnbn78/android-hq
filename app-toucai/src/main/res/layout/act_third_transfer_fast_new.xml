<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryInverse"
    android:orientation="vertical">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/srlRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/vgHead"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@mipmap/bg_third_transfer_fast"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:gravity="center"
                        android:text="可转出余额(元)"
                        android:textColor="#fff"
                        android:textSize="@dimen/text_normal" />

                    <ImageView
                        android:id="@+id/ivEye"
                        android:layout_width="18dp"
                        android:layout_height="14dp"
                        android:layout_marginLeft="5dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/ic_eye_normal" />
                </LinearLayout>


                <TextView
                    android:id="@+id/tvMainBalance"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="top"
                    android:text="0.000"
                    android:textColor="#fff"
                    android:textSize="36sp"
                    android:textStyle="bold" />


                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnRecharge"
                        android:layout_width="90dp"
                        android:layout_height="37dp"
                        android:layout_marginRight="@dimen/dp_10"
                        android:background="@drawable/sh_btn_rect_white_white_round"
                        android:text="@string/recharge"
                        android:textColor="@color/orange_mine"
                        android:textSize="@dimen/text_normal" />

                    <Button
                        android:id="@+id/btnTransfer"
                        android:layout_width="90dp"
                        android:layout_height="37dp"
                        android:layout_marginRight="@dimen/dp_10"
                        android:background="@drawable/sh_btn_rect_white_white_round"
                        android:text="@string/transfer"
                        android:textColor="@color/blue_mine"
                        android:textSize="@dimen/text_normal" />

                    <Button
                        android:id="@+id/btnWithdraw"
                        android:layout_width="90dp"
                        android:layout_height="37dp"
                        android:background="@drawable/sh_btn_rect_white_white_round"
                        android:text="@string/withdrawals_ti"
                        android:textColor="@color/red_mine"
                        android:textSize="@dimen/text_normal" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/vgAG"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_10">

                <ImageView
                    android:id="@+id/ivAG"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:layout_gravity="center_vertical"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/ic_small_ag" />

                <TextView
                    android:id="@+id/tvAG"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:gravity="center|left"
                    android:text="AGIN视讯"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_normal" />

                <TextView
                    android:id="@+id/tvBalanceAG"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="⏳..."
                    android:textColor="@color/text_gray_1"
                    android:textSize="@dimen/text_normal" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tvTransferAG"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:text="一键转入"
                    android:textColor="@color/text_gray_1"
                    android:textSize="@dimen/text_normal"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/ivRefreshAG"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="14dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_refresh" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/vgIM"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_10">

                <ImageView
                    android:id="@+id/ivIM"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:layout_gravity="center_vertical"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/ic_small_im" />

                <TextView
                    android:id="@+id/tvIM"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:gravity="center|left"
                    android:text="IM体育"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_normal" />

                <TextView
                    android:id="@+id/tvBalanceIM"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="⏳..."
                    android:textColor="@color/text_gray_1"
                    android:textSize="@dimen/text_normal" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tvTransferIM"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:text="一键转入"
                    android:textColor="@color/text_gray_1"
                    android:textSize="@dimen/text_normal"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/ivRefreshIM"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="14dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_refresh" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/vgKY"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_10">

                <ImageView
                    android:id="@+id/ivKY"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:layout_gravity="center_vertical"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/ic_small_ky" />

                <TextView
                    android:id="@+id/tvKY"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:gravity="center|left"
                    android:text="KY棋牌"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_normal" />

                <TextView
                    android:id="@+id/tvBalanceKY"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="⏳..."
                    android:textColor="@color/text_gray_1"
                    android:textSize="@dimen/text_normal" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tvTransferKY"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:text="一键转入"
                    android:textColor="@color/text_gray_1"
                    android:textSize="@dimen/text_normal"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/ivRefreshKY"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="14dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_refresh" />
            </LinearLayout>

            <!--v2.3版本新增 德胜棋牌-->

            <LinearLayout
                android:id="@+id/vgDS"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_10">

                <ImageView
                    android:id="@+id/ivDS"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:layout_gravity="center_vertical"
                    android:padding="3dp"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/ds_zhuanzhang" />

                <TextView
                    android:id="@+id/tvDS"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:gravity="center|left"
                    android:text="DS棋牌"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_normal" />

                <TextView
                    android:id="@+id/tvBalanceDS"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="⏳..."
                    android:textColor="@color/text_gray_1"
                    android:textSize="@dimen/text_normal" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tvTransferDS"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:text="一键转入"
                    android:textColor="@color/text_gray_1"
                    android:textSize="@dimen/text_normal"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/ivRefreshDS"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="14dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_refresh" />
            </LinearLayout>

            <!--v2.3版本新增 PT电游-->

            <LinearLayout
                android:id="@+id/vgPT"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_10"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/ivPT"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:layout_gravity="center_vertical"
                    android:padding="3dp"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/ic_pt" />

                <TextView
                    android:id="@+id/tvPT"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:gravity="center|left"
                    android:text="PT电子"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_normal" />

                <TextView
                    android:id="@+id/tvBalancePT"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="⏳..."
                    android:textColor="@color/text_gray_1"
                    android:textSize="@dimen/text_normal" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tvTransferPT"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:text="一键转入"
                    android:textColor="@color/text_gray_1"
                    android:textSize="@dimen/text_normal"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/ivRefreshPT"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="14dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_refresh" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/vgCq9"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_10"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/ivCq9"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:layout_gravity="center_vertical"
                    android:padding="3dp"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/ic_pt" />

                <TextView
                    android:id="@+id/tvCq9"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:gravity="center|left"
                    android:text="CQ9电游"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_normal" />

                <TextView
                    android:id="@+id/tvBalanceCq9"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="⏳..."
                    android:textColor="@color/text_gray_1"
                    android:textSize="@dimen/text_normal" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tvTransferCq9"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:text="一键转入"
                    android:textColor="@color/text_gray_1"
                    android:textSize="@dimen/text_normal"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/ivRefreshCq9"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="14dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_refresh" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/vgDatang"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_10"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/ivDatang"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:layout_gravity="center_vertical"
                    android:padding="3dp"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/ic_datang" />

                <TextView
                    android:id="@+id/tvDatang"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:gravity="center|left"
                    android:text="大唐棋牌"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_normal" />

                <TextView
                    android:id="@+id/tvBalanceDatang"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="⏳..."
                    android:textColor="@color/text_gray_1"
                    android:textSize="@dimen/text_normal" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tvTransferDatang"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:text="一键转入"
                    android:textColor="@color/text_gray_1"
                    android:textSize="@dimen/text_normal"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/ivRefreshDatang"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="14dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_refresh" />
            </LinearLayout>

        </LinearLayout>
    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>
