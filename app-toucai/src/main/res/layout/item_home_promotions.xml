<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/vgPromotions"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivTitleYouhui"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:background="@color/white_f3f3f3"
        android:padding="10dp"
        android:src="@mipmap/bg_yhhdong" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:padding="15dp"
        android:text="敬请期待!"
        android:textColor="@color/gray"
        android:textSize="16dp" />

    <RelativeLayout
        android:id="@+id/percentRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/dp_10"
        android:visibility="gone">

        <ImageView
            android:id="@+id/ivLeft"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_below="@+id/ivTitle"
            android:layout_marginRight="@dimen/dp_10"
            android:scaleType="centerCrop"
            android:src="@mipmap/app_promotionsbg" />

        <ImageView
            android:id="@+id/ivTop"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/ivLeft"
            android:scaleType="centerCrop"
            android:src="@mipmap/img_banner_2" />


        <ImageView
            android:id="@+id/ivBottom"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/ivTop"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_toRightOf="@+id/ivLeft"
            android:scaleType="centerCrop"
            android:src="@mipmap/img_banner_3" />

    </RelativeLayout>
</LinearLayout>