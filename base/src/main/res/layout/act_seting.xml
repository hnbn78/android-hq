<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/colorPrimaryInverse"
              android:orientation="vertical"
    >

    <RelativeLayout
        android:id="@+id/first__layout"
        style="@style/setting_item"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tvScanQR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="二维码扫描"
            android:textSize="16sp"

            />

        <ImageView
            android:id="@+id/ivScanQR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:scaleType="centerCrop"
            android:src="@mipmap/ic_person_set_scanqr"/>

        <ImageView
            android:id="@+id/ivScanQRArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_common_arrow_right"

            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/second__layout"
        android:background="@color/colorDevider"/>

    <RelativeLayout
        android:id="@+id/second__layout"
        style="@style/setting_item">

        <TextView
            android:id="@+id/modify_funds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="@string/title_login_pwd_modify"
            android:textSize="16sp"

            />

        <ImageView
            android:id="@+id/modify_funds_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:scaleType="centerCrop"
            android:src="@mipmap/ic_person_set_change_psw"/>

        <ImageView
            android:id="@+id/modify_founds_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_common_arrow_right"

            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/second__layout"
        android:background="@color/colorDevider"/>

    <RelativeLayout
        android:id="@+id/third_layout"
        style="@style/setting_item">


        <TextView
            android:id="@+id/modify_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="@string/title_fund_pwd_modify"
            android:textSize="16sp"

            />

        <ImageView
            android:id="@+id/modify_password_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_person_set_change_money_psw"

            />

        <ImageView
            android:id="@+id/back_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_common_arrow_right"

            />
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_below="@+id/third_layout"
        android:background="@color/colorDevider"/>

    <RelativeLayout
        android:id="@+id/four_layout"
        style="@style/setting_item">


        <TextView
            android:id="@+id/share_app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_centerVertical="true"
            android:text="@string/fingerprint_login"
            android:textSize="16sp"

            />

        <ImageView
            android:id="@+id/share_app_iv"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_finger_login"
            android:layout_centerVertical="true"
            />

        <ToggleButton
            android:id="@+id/finger_switch"
            android:layout_width="48dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/togglebutton"
            android:checked="false"
            android:text="null"
            android:textOff=""
            android:textOn=""/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/four_layout"
        android:background="@color/colorDevider"/>

    <RelativeLayout
        android:id="@+id/five_layout"
        style="@style/setting_item">


        <TextView
            android:id="@+id/help_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="@string/line_charge"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            />

        <ImageView
            android:id="@+id/help_center_iv"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_network"
            android:layout_centerVertical="true"
            />

        <ToggleButton
            android:id="@+id/line_switch"
            android:layout_width="48dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/togglebutton"
            android:scaleType="centerCrop"
            android:text="null"
            android:textOff=""
            android:textOn=""

            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorDevider"/>

    <RelativeLayout
        android:id="@+id/six_layout"
        style="@style/setting_item">


        <TextView
            android:id="@+id/about_us"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="@string/share_application"

            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/about_us_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:scaleType="centerCrop"
            android:src="@mipmap/ic_person_set_share"/>

        <ImageView
            android:id="@+id/about_us_back_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"

            android:scaleType="centerCrop"
            android:src="@mipmap/ic_common_arrow_right"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/six_layout"
        android:background="@color/colorDevider"/>

    <RelativeLayout
        android:id="@+id/seven_layout"
        style="@style/setting_item">


        <TextView
            android:id="@+id/version_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="@string/help_center"

            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/version_update_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"

            android:src="@mipmap/ic_person_set_help"/>


        <ImageView
            android:id="@+id/back_iv_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"

            android:src="@mipmap/ic_common_arrow_right"/>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/seven_layout"
        android:background="@color/colorDevider"/>

    <RelativeLayout
        android:id="@+id/eight_layout"
        style="@style/setting_item">


        <TextView
            android:id="@+id/version_update_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="@string/about_us"

            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/update_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"

            android:src="@mipmap/ic_about_us"/>


        <ImageView
            android:id="@+id/iv_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"

            android:src="@mipmap/ic_common_arrow_right"/>


    </RelativeLayout>

    <View
        android:id="@+id/adad_layout"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/eight_layout"
        android:background="@color/colorDevider"/>

    <RelativeLayout
        android:id="@+id/vgVersion"
        style="@style/setting_item">


        <TextView
            android:id="@+id/nine_update_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="@string/version_update"

            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/nine_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"

            android:src="@mipmap/ic_person_set_update"/>

        <TextView
            android:id="@+id/tvVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="25dp"
            android:scaleType="centerCrop"
            android:text="0.0.0"/>

        <ImageView
            android:id="@+id/nine_iv_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"

            android:src="@mipmap/ic_common_arrow_right"/>


    </RelativeLayout>

    <View
        android:id="@+id/last_layout"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/vgVersion"
        android:background="@color/colorDevider"/>


    <Button
        android:id="@+id/exit_bt"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/last_layout"
        android:layout_margin="40dp"
        android:background="@drawable/sl_btn_primary_oval_sh"
        android:padding="5dp"
        android:text="@string/exit_login"
        android:textColor="@color/textColorPrimaryInverse"
        android:textSize="16sp"
        android:visibility="visible"/>


</LinearLayout>
