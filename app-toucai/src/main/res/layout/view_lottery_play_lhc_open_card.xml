<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:layout_marginLeft="3dp"
        android:src="@mipmap/ic_lhc_card_view_left"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_bg">

        <TextView
            android:id="@+id/tv_issue_title"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="13dp"
            android:text="第 00000期 开奖结果"
            android:textColor="@color/gray_content"
            android:textSize="13dp" />

        <FrameLayout
            android:id="@+id/fl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">

            <ImageView
                android:id="@+id/iv_openning"
                android:layout_width="142dp"
                android:layout_height="38dp"
                android:layout_gravity="left|center"
                android:layout_marginLeft="-4dp" />

            <LinearLayout
                android:id="@+id/layout_open_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_10"
                android:orientation="horizontal"
                android:paddingTop="13dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_zodic_num1"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/bg_lhc_num_circle"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:text="0"
                        android:textColor="@color/lhc_card_num_text"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_zodic_name1"
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"
                        android:includeFontPadding="false"
                        android:textColor="@color/lhc_card_zodiac_text"
                        android:textSize="13sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="12dp"
                    android:layout_height="24dp"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="+"
                    android:textColor="@color/lhc_card_num_text"
                    android:textSize="13sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_zodic_num2"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/bg_lhc_num_circle"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:text="0"
                        android:textColor="@color/lhc_card_num_text"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_zodic_name2"
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"
                        android:includeFontPadding="false"
                        android:textColor="@color/lhc_card_zodiac_text"
                        android:textSize="13sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="12dp"
                    android:layout_height="24dp"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="+"
                    android:textColor="@color/lhc_card_num_text"
                    android:textSize="13sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_zodic_num3"
