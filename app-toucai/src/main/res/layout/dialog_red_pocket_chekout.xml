<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="340dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:id="@+id/RL_RedPacket_one"
                android:layout_width="320dp"
                android:layout_height="400dp"
                android:layout_centerHorizontal="true"
                android:visibility="gone"
               >

                <ImageView
                    android:id="@+id/redpacketActPic"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:layout_centerHorizontal="true"
                    android:background="@mipmap/redenvelope_chekout_big" />

                <TextView
                    android:id="@+id/one_get_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="100dp"
                    android:maxWidth="160dp"
                    android:maxLines="2"
                    android:text="¥ 15.00"
                    android:textColor="@color/red"
                    android:textSize="32dp" />

                <TextView
                    android:id="@+id/one_need_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="75dp"
                    android:gravity="center"
                    android:maxWidth="150dp"
                    android:text="再充值 133 元 可以再次获取红包机会"
                    android:textColor="@color/white_f3f3f3"
                    android:textSize="16dp" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/RL_RedPacket_tow"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:visibility="gone"
                >

                <ImageView
                    android:id="@+id/redpacketActPic2"
                    android:layout_width="match_parent"
                    android:layout_height="360dp"
                    android:layout_centerHorizontal="true"
                    android:background="@mipmap/bg_two_red_envelopes" />

                <TextView
                    android:id="@+id/tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="50dp"
                    android:text="恭喜您共获得"
                    android:textColor="@color/game_title"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/tow_get_total_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv3"
                    android:layout_centerHorizontal="true"
                    android:maxWidth="160dp"
                    android:maxLines="2"
                    android:text="¥ 30.00"
                    android:textColor="@color/game_title"
                    android:textSize="32dp" />

                <LinearLayout
                    android:id="@+id/llTowPacket"
                    android:layout_width="wrap_content"
                    android:layout_height="110dp"
                    android:layout_centerInParent="true"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tow_red_1"
                        android:layout_width="80dp"
                        android:layout_height="110dp"
                        android:background="@mipmap/redenvelope_chekout"
                        android:gravity="center_horizontal"
                        android:paddingTop="20dp"
                        android:text="¥ 15.00"
                        android:textColor="@color/red" />

                    <TextView
                        android:id="@+id/tow_red_2"
                        android:layout_width="80dp"
                        android:layout_height="110dp"
                        android:layout_marginLeft="30dp"
                        android:background="@mipmap/redenvelope_chekout"
                        android:gravity="center_horizontal"
                        android:paddingTop="20dp"
                        android:text="¥ 15.00"
                        android:textColor="@color/red" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/llTowPacket"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="145dp"
                    android:text="奖金已经发放到你的账户"
                    android:textColor="@color/black_cccccc" />

                <TextView
                    android:id="@+id/tow_need_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tip"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="18dp"
                    android:gravity="center"
                    android:maxWidth="160dp"
                    android:text="再充值 133 元 可以再次获取红包机会"
                    android:textColor="@color/white_f3f3f3" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/RL_RedPacket_four"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/redpacketActPic3"
                    android:layout_width="match_parent"
                    android:layout_height="420dp"
                    android:layout_centerHorizontal="true"
                    android:background="@mipmap/bg_four_red_envelopes" />

                <TextView
                    android:id="@+id/tv4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="35dp"
                    android:text="恭喜您共获得"
                    android:textColor="@color/game_title"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/four_get_total_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv4"
                    android:layout_centerHorizontal="true"
                    android:maxWidth="160dp"
                    android:maxLines="2"
                    android:text="¥ 30.00"
                    android:textColor="@color/game_title"
                    android:textSize="32dp" />

                <LinearLayout
                    android:id="@+id/llTowPacket2"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:layout_below="@+id/tv4"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/four_red_1"
                        android:layout_width="70dp"
                        android:layout_height="90dp"
                        android:background="@mipmap/redenvelope_chekout"
                        android:gravity="center_horizontal"
                        android:paddingTop="15dp"
                        android:text="¥ 15.00"
                        android:textColor="@color/red" />

                    <TextView
                        android:id="@+id/four_red_2"
                        android:layout_width="70dp"
                        android:layout_height="90dp"
                        android:layout_marginLeft="30dp"
                        android:background="@mipmap/redenvelope_chekout"
                        android:gravity="center_horizontal"
                        android:paddingTop="15dp"
                        android:text="¥ 15.00"
                        android:textColor="@color/red" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llTowPacket3"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:layout_below="@+id/llTowPacket2"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_10"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/four_red_3"
                        android:layout_width="70dp"
                        android:layout_height="90dp"
                        android:background="@mipmap/redenvelope_chekout"
                        android:gravity="center_horizontal"
                        android:paddingTop="15dp"
                        android:text="¥ 15.00"
                        android:textColor="@color/red" />

                    <TextView
                        android:id="@+id/four_red_4"
                        android:layout_width="70dp"
                        android:layout_height="90dp"
                        android:layout_marginLeft="30dp"
                        android:background="@mipmap/redenvelope_chekout"
                        android:gravity="center_horizontal"
                        android:paddingTop="15dp"
                        android:text="¥ 15.00"
                        android:textColor="@color/red" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tip2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/llTowPacket3"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="12dp"
                    android:text="奖金已经发放到你的账户"
                    android:textColor="@color/black_cccccc" />

                <TextView
                    android:id="@+id/four_need_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tip2"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:maxWidth="160dp"
                    android:text="再充值 133 元 可以再次获取红包机会"
                    android:textColor="@color/white_f3f3f3" />

            </RelativeLayout>


            <TextView
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:gravity="center"
                android:textColor="@color/black_666666"
                android:textSize="16dp">

            </TextView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/btnLeft"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="140dp"
                android:layout_height="45dp"
                android:background="@mipmap/btn_yellow_recharge"
                android:gravity="center"
                android:textColor="@color/red_ff2c66"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/btnRight"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="140dp"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:background="@mipmap/btn_green_game_now"
                android:gravity="center"
                android:textColor="@color/red_ff2c66"
                android:textSize="18dp" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/btn_cancel"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:src="@mipmap/ic_delete_circle" />


    </RelativeLayout>
</FrameLayout>
