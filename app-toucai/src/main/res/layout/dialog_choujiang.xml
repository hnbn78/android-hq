<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="330dp"
        android:layout_height="455dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/bg_bonus_pools" />

        <ImageView
            android:id="@+id/cancel"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:padding="8dp"
            android:src="@mipmap/ic_delete_circle" />

        <TextView
            android:id="@+id/qihapxinxi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="87dp"
            android:text="2255555555555555555552"
            android:textColor="@color/white"
            android:textSize="11dp" />

        <include
            android:id="@+id/inclue2"
            layout="@layout/layout_laohuji_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="94dp"
            android:layout_marginTop="113dp" />

        <ListView
            android:id="@+id/listviewChoujiang"
            android:layout_width="230dp"
            android:layout_height="190dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="195dp"
            android:overScrollMode="never"
            android:scrollbars="none" />

        <TextView
            android:id="@+id/TvseeMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/listviewChoujiang"
            android:layout_centerHorizontal="true"
            android:paddingLeft="50dp"
            android:paddingTop="3dp"
            android:paddingRight="50dp"
            android:text="更多>>"
            android:textColor="@color/red_2" />

        <Button
            android:id="@+id/btnNoAnimate"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/shape_round_black_border"
            android:paddingLeft="5dp"
            android:paddingTop="1dp"
            android:paddingRight="5dp"
            android:paddingBottom="1dp"
            android:text="跳过动画"
            android:textColor="@color/white_ebebeb"
            android:textSize="16dp" />

    </RelativeLayout>

</FrameLayout>