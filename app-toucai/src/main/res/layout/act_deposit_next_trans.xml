                                android:textColor="@color/white"
                                android:textSize="@dimen/text_large" />

                            <ImageView
                                android:id="@+id/guide_finish_bg2"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:layout_centerVertical="true"
                                android:scaleType="centerCrop"
                                android:src="@mipmap/guide_bg_bigger"
                                android:visibility="gone" />

                        </RelativeLayout>

                        <TextView
                            android:id="@+id/guide_finish_tip2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/layout_confirm"
                            android:layout_gravity="right"
                            android:layout_marginBottom="-11dp"
                            android:layout_marginRight="20dp"
                            android:background="@mipmap/guide_input_tip_down"
                            android:gravity="bottom"
                            android:paddingBottom="15dp"
                            android:paddingLeft="@dimen/dp_10"
                            android:paddingRight="@dimen/dp_10"
                            android:text="进入订单确认页面"
                            android:textSize="12sp"
                            android:visibility="gone" />

                        <LinearLayout
                            android:id="@+id/layout_cancel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/layout_confirm"
                            android:layout_marginBottom="@dimen/dp_10"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/btnCancel2"
                                style="?android:attr/borderlessButtonStyle"
                                android:layout_width="0dp"
                                android:layout_height="45dp"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="7dp"
                                android:layout_weight="2"
                                android:background="@drawable/sh_bd_rec_gray_white_arc"
                                android:text="取消订单"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_large" />

                            <Button
                                android:id="@+id/btnOpenApp2"
                                style="?android:attr/borderlessButtonStyle"
                                android:layout_width="0dp"
                                android:layout_height="45dp"
                                android:layout_marginLeft="7dp"
                                android:layout_marginRight="15dp"
                                android:layout_weight="1"
                                android:background="@drawable/sh_bd_rec_gray_white_arc"
                                android:text="打开微信"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/text_large" />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

    </FrameLayout>

